{
  "name": "mail-code-reader-extension",
  "displayName": "Mail code reader",
  "version": "0.1.0",
  "description": "An extension for reading verification codes from e-mail and inserting them into input fields",
  "author": "Konstantin Markelov <k.markelov@anarchyghost.com>",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.9.3",
    "antd": "^5.15.3",
    "bip39": "^3.1.0",
    "imap": "^0.8.19",
    "imap-simple": "^5.1.0",
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-json-editor-ajrm": "^2.5.14",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.34.1",
    "prettier": "3.2.4",
    "typescript": "*"
  },
  "manifest": {
    "browser_specific_settings": {
      "gecko": {
        "id": "mailcodereader@anarchyghost.com"
      }
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self';"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "permissions": [
      "contextMenus",
      "scripting"
    ],
    "commands": {}
  }
}
